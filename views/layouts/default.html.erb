<!DOCTYPE html>
<html lang="<%= I18n.locale %>">

<head>
  <%= render 'shared/page_header' %>
  <%= themeable_stylesheet_link_tag :theme %>
  <%= themeable_javascript_include_tag :theme %>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/png" href="/images/theme/favicon.png" />
  <title><%=h page_title %></title>
</head>

<body>

<header>
  <div id="logo">
    <h1><span id="logo-inner"><%= link_to(this_blog.blog_name, this_blog.base_url) %></span></h1>
    <p class="desc">
      <%= this_blog.blog_subtitle %>
    </p>
  </div>
  <nav class='navbar navbar-inverse'>
    <div class='navbar-inner'>
      <ul class='nav'>
        <%= content_tag(:li, link_to('Top', this_blog.base_url))%>
        <%= content_tag(:li, link_to('過去記事', '/archives/'))%>
        <%= content_tag(:li, link_to('静止画MADリンク集', "/links/"))%>
        <li><a href="/pages/about-me">サイト・管理人紹介</a></li>
        <li><a href="/pages/creation">制作物・文書</a></li>
      </ul>
    </div>
  </nav>
</header>

<section id="external">
  <div id='main' class="main">
    <div class="articles">
      <%= yield %>
    </div>
    <div id='sidebar'>
      <h3 class='sidebar-title'>m@d scene</h3>
